{
	"name": "@sapphire/slashies-handler",
	"version": "1.0.0",
	"description": "Slash Commands handler Sapphire Discord server",
	"author": "@sapphire <contact@sapphirejs.dev>",
	"license": "MIT",
	"private": true,
	"main": "dist/index.js",
	"scripts": {
		"lint": "eslint src --ext ts --fix",
		"format": "prettier --write src/**/*.ts",
		"build": "tsc -b src",
		"watch": "tsc -b src -w",
		"clean": "node scripts/clean.mjs",
		"vercel-build": "ncc build src/index.ts -o api",
		"update": "yarn upgrade-interactive --latest",
		"commit": "git-cz",
		"cz": "git-cz",
		"prepare": "husky install .github/husky"
	},
	"dependencies": {
		"discord-api-types": "^0.18.1",
		"dotenv-cra": "^2.1.0",
		"tslib": "^2.3.0",
		"tweetnacl": "^1.0.3"
	},
	"devDependencies": {
		"@commitlint/cli": "^12.1.4",
		"@commitlint/config-conventional": "^12.1.4",
		"@sapphire/eslint-config": "^3.2.1",
		"@sapphire/prettier-config": "^1.1.6",
		"@sapphire/ts-config": "^2.3.1",
		"@types/node": "^16.0.0",
		"@types/node-fetch": "^2.5.10",
		"@vercel/ncc": "^0.28.6",
		"@vercel/node": "^1.11.1",
		"cz-conventional-changelog": "^3.3.0",
		"husky": "^7.0.0",
		"lint-staged": "^11.0.0",
		"npm-run-all": "^4.1.5",
		"pretty-quick": "^3.1.1",
		"typescript": "^4.3.5"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sapphiredev/sapphire-slashies.git"
	},
	"bugs": {
		"url": "https://github.com/sapphiredev/sapphire-slashies/issues"
	},
	"homepage": "https://github.com/sapphiredev/sapphire-slashies#README",
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"resolutions": {
		"acorn": "^8.4.1",
		"minimist": "^1.2.5",
		"kind-of": "^6.0.3",
		"dot-prop": "^6.0.1",
		"marked": "^2.1.3",
		"merge": "^2.1.1",
		"trim": "^1.0.1"
	},
	"prettier": "@sapphire/prettier-config",
	"eslintConfig": {
		"extends": "@sapphire/eslint-config"
	}
}
